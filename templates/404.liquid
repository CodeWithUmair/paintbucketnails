<section class="page-introduction" data-aos="fade">
  <div class="page-width text-center">
    <div class="max-w-lg text-wrap">
      <h1>
        {{ 'general.404.title' | t }}
      </h1>

      <p>{{ 'general.404.subtext_html' | t }}</p>

      <div class="button-wrap text-center">
        {% assign text = 'all' %}
        {% assign link = shop.url | append: '/collections/all-products' %}
        <a href="{{ link }}" class="btn btn-outline btn-wide"><i class="fas fa-long-arrow-alt-left"></i> Back to {{ text }}</a>
      </div>
    </div>
  </div>
</section>