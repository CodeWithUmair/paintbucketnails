<section id="faq-pressons" class="how-to-apply-faq bg-lt-pink" data-aos="fade" data-section-id="{{ section.id }}">
  <div class="page-width max-w-md">
    <div class="text-center">
      <h2>{{ section.settings.title }}</h2>

      {{ section.settings.subtitle }}
    </div>

    <div class="faq-wrap">
      {% for block in section.blocks %}
        <div class="a11y-drawer">
          <button class="drawer-title">
            {{ block.settings.title }}
            {% include 'icon-chevron-down' %}
          </button>

          <div class="drawer-content">
            <div class="content-wrap">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.sub_faq_text != blank %}
      <h3 class="text-center">{{ section.settings.sub_faq_text }}</h3>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Press Ons FAQs",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Press Ons FAQ"
      },
      {
        "type": "textarea",
        "id": "sub_faq_text",
        "label": "Sub-faq Text",
        "default": "<p>Have more questions? Email us at <a href=\"mailto:hello@paintbucketnails.com\">hello@paintbucketnails.com</a></p>"
      }
    ],
    "blocks": [
      {
        "name": "FAQ",
        "type": "faq",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ]
  }
{% endschema %}
