<div class="MF-main-banner-v2-main-div--{{ section.id }}
{% if section.settings.MF_main_banner_v2_bg_chk_id %}
  MF-main-banner-v2-main-div--imgbg
{% else %}
  MF-main-banner-v2-main-div--colorbg
{% endif %}
">
  
  <div class="MF-main-banner-v2-container">
    <div class="MF-main-banner-v2-slider">

      {% for block in section.blocks %}
        <div class="MF-main-banner-v2-slide">
          <div class="MF-main-banner-v2-wrapper">

            <div class="MF-main-banner-v2-img-div">
              <img src="{{ block.settings.image | image_url: width:1000 }}" width="800px" height="800px" alt="Banner Image" />
            </div>

            <div class="MF-main-banner-v2-content-div">
              <div class="MF-main-banner-v2-content-wrapper">
                <span>{{ block.settings.subheading }}</span>
                <h2>{{ block.settings.heading }}</h2>
                {% if block.settings.icon %}
                  <img src="{{ block.settings.icon | image_url: width:248 }}" width="248px" height="248px" alt="Icon" />
                {% endif %}
                {% if block.settings.button_text %}
                  <a href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
                {% endif %}
              </div>
            </div>

          </div>
        </div>
      {% endfor %}

    </div>
  </div>

</div>

<!-- Slick Slider -->
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />

<script>
  document.addEventListener('DOMContentLoaded', function() {
    $('.MF-main-banner-v2-slider').slick({
      dots: true,
      arrows: true,
      autoplay: true,
      autoplaySpeed: 3000,
      infinite: true,
      slidesToShow: 1,
      slidesToScroll: 1
    });
  });
</script>

<style>

  .MF-main-banner-v2-main-div--{{ section.id }} {
    font-family: 'Romie', sans-serif;
  }

  {% if section.settings.MF_main_banner_v2_bg_chk_id %}
    .MF-main-banner-v2-main-div--imgbg {
      background: url({{ section.settings.MF_main_banner_v2_img_bg_id | image_url: width: 2000 }}) no-repeat center center/cover;
    }
  {% else %}
    .MF-main-banner-v2-main-div--colorbg {
      background-color: {{ section.settings.MF_main_banner_v2_color_bg_id }};
    }
  {% endif %}

  .MF-main-banner-v2-slider {
    overflow: hidden;
  }
  .MF-main-banner-v2-slide {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .MF-main-banner-v2-wrapper {
    display: flex;
    width: 100%;
  }
  .MF-main-banner-v2-img-div, .MF-main-banner-v2-content-div {
    width: 50%;
  }
  .MF-main-banner-v2-img-div img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .MF-main-banner-v2-content-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  .MF-main-banner-v2-content-wrapper h2 {
    font-size: 2.5rem;
    margin: 0.5rem 0;
  }
  .MF-main-banner-v2-content-wrapper span {
    font-size: 1.2rem;
    color: #555;
  }
  .MF-main-banner-v2-content-wrapper a {
    margin-top: 1rem;
    padding: 10px 20px;
    background: black;
    color: white;
    text-decoration: none;
    font-size: 1rem;
    border-radius: 5px;
  }
</style>






{% schema %}
{
  "name": "Main Banner V2 Slider",
  "class": "MF-main-banner-v2-sec section",
  "settings": [
    {
      "type": "checkbox",
      "id": "MF_main_banner_v2_bg_chk_id",
      "label": "Background image",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "MF_main_banner_v2_img_bg_id",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "MF_main_banner_v2_color_bg_id",
      "label": "Background color",
      "default": "#FEEFED"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "New!"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "The Spring Collection"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Main Banner V2 Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
