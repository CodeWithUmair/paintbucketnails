<section class="section-hero-banner lazyload" data-aos="fade" data-section-id="{{ section.id }}" data-section-type="hero-banner">
  <div class="page-width">
    <div class="flex--flexbox flex--wrap flex--justify-space-evenly image-pos-{{ section.settings.image_loc }}">
      <div class="flex-item flex-item--two-fifths image-wrap image-pos-{{ section.settings.image_loc }}">
        {% if section.settings.image != blank %}
          <img 
            data-src="{{ section.settings.image  | img_url: '800x' }}" 
            data-srcset="
              {{ section.settings.image  | img_url: '800x' }} 1x, 
              {{ section.settings.image  | img_url: '800x', scale: 2 }} 2x
            " 
            alt="{{ section.settings.image.alt }}"
            class="lazyload"
          >
        {% endif %}
      </div>

      <div class="flex-item flex-item--two-fifths">
        <div class="text-wrap text-{{ section.settings.text_align }}">
          {% if section.settings.pre_heading != blank or section.settings.heading != blank %}
            <h1>
              {% if section.settings.pre_heading != blank %}
                <div class="pre-heading">
                  {{ section.settings.pre_heading }}
                </div>
              {% endif %}

              {% if section.settings.heading != blank %}
                <div class="heading">
                  {{ section.settings.heading }}
                </div>
              {% endif %}
            </h1>
          {% endif %}

          {% if section.settings.subtitle != blank %}
            <div class="subtitle">
             {{ section.settings.subtitle }}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <div class="button-wrap">
              <a class="btn btn-outline" href="{{ section.settings.button_link }}" style="width:{{ section.settings.button_width }}px">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}

          {% if section.settings.sublink_1 != blank or section.settings.sublink_2 != blank %}
            <div class="link-wrap">
              {% if section.settings.sublink_1 != blank %}
                <a href="{{ section.settings.sublink_1 }}" title="">{{ section.settings.sublink_1_text }}</a>
              {% endif %}

              {% if section.settings.sublink_2 != blank %}
                <a href="{{ section.settings.sublink_2 }}" title="">{{ section.settings.sublink_2_text }}</a>
              {% endif %}
            </div>
          {% endif %}

          {% if section.settings.sublink_note != blank %}
            <p class="sub-button-note"><em>{{ section.settings.sublink_note }}</em></p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <style>
    {% if section.settings.bg_image != blank %}
      #shopify-section-{{ section.id }} .section-hero-banner.lazyloaded {
        background-image: url({{ section.settings.bg_image | img_url: '2000x' }});
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }
      {% if section.settings.bg_image_mobile != blank %}
        @media only screen and (max-width: 769px) {
          #shopify-section-{{ section.id }} .section-hero-banner.lazyloaded {
            background-image: url({{ section.settings.bg_image_mobile | img_url: '1440x' }});
          }
        }
      {% endif %}
    {% endif %}

    {{ section.settings.custom_styles }}
  </style>
</section>

{% schema %}
  {
    "name": "Subscription Banner",
    "settings": [
      {
        "type": "textarea",
        "id": "custom_styles",
        "label": "Custom CSS Styles"
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "bg_image_mobile",
        "label": "Background Image - Mobile"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text Alignment",
        "options": [
          { "value": "left", "label": "Left"},
          { "value": "center", "label": "Center"},
          { "value": "right", "label": "Right"}
        ],
        "default": "center"
      },
      {
        "type": "text",
        "id": "pre_heading",
        "label": "Pre-heading",
        "default": "Nail Privilege"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "It’s a thing now"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "At Paintbucket, caring for your nails is fun and indulgent — never a chore."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "range",
        "id": "button_width",
        "label": "Button Width",
        "min": 200,
        "max": 400,
        "step": 25,
        "unit": "px",
        "default": 200
      },
      {
        "type": "header",
        "content": "Sub-button Section"
      },
      {
        "type": "text",
        "id": "sublink_1_text",
        "label": "Link Text 1"
      },
      {
        "type": "url",
        "id": "sublink_1",
        "label": "Link 1"
      },
      {
        "type": "text",
        "id": "sublink_2_text",
        "label": "Link Text 2"
      },
      {
        "type": "url",
        "id": "sublink_2",
        "label": "Link 2"
      },
      {
        "type": "text",
        "id": "sublink_note",
        "label": "Note",
        "default": "Actual nail wrap designs will vary by month based on new releases."
      },
      {
        "type": "header",
        "content": "Content Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Content Image"
      },
      {
        "type": "select",
        "id": "image_loc",
        "label": "Image Placement",
        "options": [
          { "value": "left", "label": "Left"},
          { "value": "right", "label": "Right"}
        ],
        "default": "left"
      }
    ]
  }
{% endschema %}