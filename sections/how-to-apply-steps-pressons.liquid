{% include 'page-introduction-pressons' %}

<section id="how-to-apply-pressons" class="bg-white" data-aos="fade" data-section-id="{{ section.id }}" data-section-type="">
  <div class="page-width">
    <div class="heading text-center">
      <h2>{{ section.settings.heading }}</h2>

      {% if section.settings.video_link != blank %}
        <a href="{{ section.settings.video_link }}" class="video-link" target="_blank">{% include 'icon-video-play' %} Watch the Video
      {% endif %}</a>
    </div>

    {% for block in section.blocks %}
      {% assign modulo = forloop.index | modulo: 2 %}

      {% if modulo == 1 %}
        {% assign numclass = 'odd' %}
      {% else %}
        {% assign numclass = 'even' %}
      {% endif %}


        {% if block.settings.video_embed2 != blank %}
          <div class="text-center">
            {% if forloop.index == 3 %}
            <h3 class="h2">
                <div class="step-num">Step {{ forloop.index }}</div>
                Prep & Press
              </h3>
          {% endif %}
            <div class='my-34 tabslist'> <span data-tab-handler="#glue" class="btn-tabs active" >GLUE</span> <span data-tab-handler="#stickers" class="btn-tabs ">Stickers</span></div>
          </div>

          <div class="alt-col-row flex--flexbox flex--wrap flex--items-center {{ numclass }} tabs active" id="glue">
            <div class="flex-item flex-item--one-half image-item">
                <div class="image-wrap">
                  {{ block.settings.video_embed }}
                </div>
              </div>
      
              <div class="flex-item flex-item--one-half text-item">
                <div class="text-wrap">
                  <h3 class="h2">
                    {{ block.settings.heading }}
                  </h3>
                  
                  {% if block.settings.subtitle != blank %}
                    <div class="subtitle">
                      {{ block.settings.subtitle }}
                    </div>
                  {% endif %}
      
                  {% if block.settings.pro_tips != blank %}
                    <div class="pro-tips">
                      <img src="{{ 'hta-pb-pro-tips.png' | asset_img_url: '200x' }}" class="pro-tips-handletter" alt="PB Pro Tips">
      
                      {{ block.settings.pro_tips }}
                    </div>
                  {% endif %}
                </div>
              </div>
          </div>
          <div class="alt-col-row flex--flexbox flex--wrap flex--items-center {{ numclass }} tabs " id="stickers">
            <div class="flex-item flex-item--one-half image-item">
                <div class="image-wrap">
                  {{ block.settings.video_embed2 }}
                </div>
              </div>
      
              <div class="flex-item flex-item--one-half text-item">
                <div class="text-wrap">
                  <h3 class="h2">
                    {{ block.settings.heading2 }}
                  </h3>
                  
                  {% if block.settings.subtitle2 != blank %}
                    <div class="subtitle">
                      {{ block.settings.subtitle2 }}
                    </div>
                  {% endif %}
      
                  {% if block.settings.pro_tips2 != blank %}
                    <div class="pro-tips">
                      <img src="{{ 'hta-pb-pro-tips.png' | asset_img_url: '200x' }}" class="pro-tips-handletter" alt="PB Pro Tips">
      
                      {{ block.settings.pro_tips2 }}
                    </div>
                  {% endif %}
                </div>
              </div>
          </div>
        {% else %}
          <div class="alt-col-row flex--flexbox flex--wrap flex--items-center {{ numclass }}">
          <div class="flex-item flex-item--one-half image-item">
            <div class="image-wrap">
              {{ block.settings.video_embed }}
            </div>
          </div>
  
          <div class="flex-item flex-item--one-half text-item">
            <div class="text-wrap">
              <h3 class="h2">
                {% unless forloop.index == 3 %}
                      <div class="step-num">Step {{ forloop.index }}</div>
                {% endunless %}
                {{ block.settings.heading }}
              </h3>
              
              {% if block.settings.subtitle != blank %}
                <div class="subtitle">
                  {{ block.settings.subtitle }}
                </div>
              {% endif %}
  
              {% if block.settings.pro_tips != blank %}
                <div class="pro-tips">
                  <img src="{{ 'hta-pb-pro-tips.png' | asset_img_url: '200x' }}" class="pro-tips-handletter" alt="PB Pro Tips">
  
                  {{ block.settings.pro_tips }}
                </div>
              {% endif %}
            </div>
          </div>
      </div>
       {% endif %}
    {% endfor %}

    <div id="how-to-remove-pressons" class="bg-lt-pink text-center circle-text-container">
      <div class="circle-text circle-rotated text-center">
        <div class="text-wrap">
          How to Remove
        </div>
      </div>

      <h3 class="h2">{{ section.settings.remove_heading }}</h3>

      <div class="how-to-remove-content-pressons">{{ section.settings.remove_content }}</div>
    </div>

    <div class="closing text-center">
      {{ section.settings.closing_content }}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="button-wrap text-center">
          <a class="btn btn-outline" href="{{ section.settings.button_link }}" title="" target="_blank">{{ section.settings.button_text }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

  <style>
    .how-to-remove-content-pressons {
        max-width: 650px;
        margin-left: auto;
        margin-right: auto;
  }
    .my-34{
      margin-top: 34px;
      margin-bottom: 34px;
    }

    .btn-tabs {
      font-weight: 700;
      letter-spacing: 3.6px;
      text-align: center;
      display: inline-block;
      
      padding-bottom: 7px;
      text-transform: uppercase;
      cursor: pointer;
    }
    .btn-tabs:first-child{
      margin-right: 50px;
    }

    .btn-tabs.active {
      border-bottom: 2px solid #212121;
    }

    .subtitle {
      line-height: 30px;
    }

    .tabs {
      display:none;
    }

    .tabs.active {
      display: flex;
    }
  </style>

<script>

 document.addEventListener("DOMContentLoaded", function() {
   const glubtn = document.querySelector(`[data-tab-handler="#glue"]`)
   const stickersbtn = document.querySelector(`[data-tab-handler="#stickers"]`)
   const gluContent = document.querySelector('#glue')
   const stickersContent = document.querySelector('#stickers')

   glubtn.addEventListener('click', () => {
     if( glubtn.classList.contains('active') && gluContent.classList.contains('active') ) return
     glubtn.classList.toggle('active')
     stickersbtn.classList.toggle('active')
     
     gluContent.classList.toggle('active')
     stickersContent.classList.toggle('active')
   })

   stickersbtn.addEventListener('click', () => {
     if( stickersbtn.classList.contains('active') && stickersContent.classList.contains('active') ) return
     glubtn.classList.toggle('active')
     stickersbtn.classList.toggle('active')
     
     gluContent.classList.toggle('active')
     stickersContent.classList.toggle('active')
   })
});

 </script>

