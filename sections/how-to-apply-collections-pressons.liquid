<section id="our-collections-pressons" class="bg-white" data-aos="fade" data-section-id="{{ section.id }}" data-section-type="">
  <div class="page-width">
    <div class="flex--flexbox flex--justify-space-between flex--items-center flex--wrap">
      <div class="flex-item flex-item--one-half text-item">
        <div class="text-wrap">
          <h2>{{ section.settings.heading }}</h2>

          {{ section.settings.content }}

          {% if section.settings.button_one_text != blank and section.settings.button_one_link != blank %}
            <div class="button-wrap">
              <a class="btn btn-outline btn-wide" href="{{ section.settings.button_one_link }}" title="" target="_blank">{{ section.settings.button_one_text }}</a>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="flex-item flex-item--one-half circle-text-container">
        <div class="circle-text text-center">
          <div class="text-wrap">
            Limited Edition
          </div>
        </div>

        <div class="slider">
          {% for block in section.blocks %}
            <div class="slide">
              <div class="image-wrap">
                <a href="{{ block.settings.link }}"><img src="{{ block.settings.image | img_url: '500x500', crop: 'center', scale: 2 }}" alt="{{ block.settings.title }}"></a>
              </div>
              <div class="text-wrap">
                <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Press Ons Collections",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Paintbucket x Batsheva Haart"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
        "default": "<p>We've partnered with IT-girl, Batsheva Haart to bring you the Material Girl Collection. A set of 4 fiercely luxurious press on manicures that will have you turning heads, all summer long.</p>"
      },
      {
        "type": "text",
        "id": "button_one_text",
        "label": "Button One Text",
        "default": "Shop The Collection"
      },
      {
        "type": "url",
        "id": "button_one_link",
        "label": "Button Url"
      }
    ],
    "blocks": [
      {
        "type": "collection_slide",
        "name": "Collection Slide",
        "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}