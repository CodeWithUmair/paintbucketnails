<!-- center-image-columns.liquid -->

<h1 class="item-heading">
    {% if section.settings.heading_text %}
      {{ section.settings.heading_text }}
    {% endif %}
  </h1>
  
  <div class="custom-section">
    <!-- Centered Image -->
    {% if section.settings.main_image %}
      <div class="center-image">
        <img src="{{ section.settings.main_image | image_url }}"
            alt="{{ section.settings.main_image.alt | escape | default: 'Main Section Image' }}"
            width="{{ section.settings.main_image.width }}"
            height="{{ section.settings.main_image.height }}"
            loading="lazy">
      </div>
    {% endif %}
  
    <!-- Columns Layout -->
    <div class="columns-wrapper">
      <!-- Left Columns -->
      <div class="column-group left">
        {% for block in section.blocks %}
          {% if forloop.index <= 3 %}
            <div class="column-item column-item-{{ forloop.index }}">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: width: 50 }}"
                    alt="{{ block.settings.icon.alt | escape | default: 'Icon ' | append: forloop.index }}"
                    width="50"
                    height="50"
                    loading="lazy">
              {% endif %}
              {% if block.settings.text %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
  
      <!-- Right Columns -->
      <div class="column-group right">
        {% for block in section.blocks %}
          {% if forloop.index > 3 %}
            <div class="column-item column-item-{{ forloop.index }}">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: width: 50 }}"
                    alt="{{ block.settings.icon.alt | escape | default: 'Icon ' | append: forloop.index }}"
                    width="50"
                    height="50"
                    loading="lazy">
              {% endif %}
              {% if block.settings.text %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  
    <div class="heading">
      <p>We obsess over the formulas so you don’t have to <br /> <br /> —just stick, paint, or press and go.</p>
      <button class="shop">Shop Paintbucket</button>
    </div>
  </div>
  
  <style>
    .custom-section {
      text-align: center;
      margin-top: -110px;
      background: #fff;
    }
  
    .center-image img {
      max-width: 1000vh; 
    }
  
    .columns-wrapper {
      display: flex;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
      flex-wrap: wrap;
    }
  
    .column-group {
      display: flex;
      flex-direction: column;
      gap: 20px;
      width: 30%;
    }
  
    .column-item {
      background: #f9f9f9;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
    }
  
    .column-item img {
      width: 50px;
      height: 50px;
      margin-bottom: 10px;
    }
  
    .column-item p {
      font-size: 14px;
      margin: 0;
    }
  
    .column-item-1 {
      background-color: #eaebe2;
    }
  
    .column-item-2 {
      background-color: #f0f4f8;
      margin-left: -15px;
      margin-right: 15px;
    }
  
    .column-item-3 {
      background-color: #feefed;
    }
  
    .column-item-4 {
      background-color: #f0f4f8;
    }
  
    .column-item-5 {
      background-color: #feefed;
      margin-left: 15px;
      margin-right: -15px;
    }
  
    .column-item-6 {
      background-color: #eaebe2;
    }
  
    .item-heading {
      background: #fff;
      font-family: Romie;
      font-weight: 400;
      font-size: 50px;
      text-align: center;
      padding-top: 20px;
      margin-bottom: -40px;
    }
  
    .heading {
      font-size: 22px;
      font-family: Verlag;
      font-weight: 300;
      margin-top: 65px;
      line-height: 20px;
    }
  </style>
  
  {% schema %}
  {
    "name": "Call To Action",
    "settings": [
      {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main Center Image"
      },
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "Call To Action"
      }
    ]
  }
  {% endschema %}
  