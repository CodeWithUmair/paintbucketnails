<section id="our-collections" class="bg-white" data-aos="fade" data-section-id="{{ section.id }}" data-section-type="">
  <div class="page-width">
    <div class="flex--flexbox flex--justify-space-between flex--items-center flex--wrap">
      <div class="flex-item flex-item--one-half text-item">
        <div class="text-wrap">
          <h2>{{ section.settings.heading }}</h2>

          {{ section.settings.content }}

          {% if section.settings.button_one_text != blank and section.settings.button_one_link != blank %}
            <div class="button-wrap">
              <a class="btn btn-outline" href="{{ section.settings.button_one_link }}" title="" target="_blank">{{ section.settings.button_one_text }}</a>
            </div>
          {% endif %}

          {% if section.settings.button_two_text != blank and section.settings.button_two_link != blank %}
            <div class="button-wrap">
              <a class="btn btn-outline" href="{{ section.settings.button_two_link }}" title="" target="_blank">{{ section.settings.button_two_text }}</a>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="flex-item flex-item--one-half circle-text-container">
        <div class="circle-text text-center">
          <div class="text-wrap">
            Only at PB
          </div>
        </div>

        <div class="slider">
          {% for block in section.blocks %}
            <div class="slide">
              <div class="image-wrap">
                <a href="{{ block.settings.link }}"><img src="{{ block.settings.image | img_url: '500x500', crop: 'center', scale: 2 }}" alt="{{ block.settings.title }}"></a>
              </div>
              <div class="text-wrap">
                <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Nail Wrap Collections",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Collections"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
        "default": "<p>Our high-design collections are created by our talented team of artists from our shop in Brooklyn, NY. We pull inspiration from everything around us and tell magical stories through the art we create. </p>"
      },
      {
        "type": "text",
        "id": "button_one_text",
        "label": "Button One Text",
        "default": "See All Looks"
      },
      {
        "type": "url",
        "id": "button_one_link",
        "label": "Button Url"
      },
      {
        "type": "text",
        "id": "button_two_text",
        "label": "Button Two Text",
        "default": "Shop Nail Wraps"
      },
      {
        "type": "url",
        "id": "button_two_link",
        "label": "Button Url"
      }
    ],
    "blocks": [
      {
        "type": "collection_slide",
        "name": "Collection Slide",
        "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
