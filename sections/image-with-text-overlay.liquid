<div class="image-with-text-overlay lazyload aos-init" data-aos="fade">
  <div class="image-with-text-overlay-image">
    <img src="{{ section.settings.bg_image | img_url: 'master' }}" />
  </div>
  <div class="image-with-text-overlay-text">
    <div class="innter-text-container">
      {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
      {% else %}
        <span>{{ section.settings.heading_svg  }}</span>
      {{ section.settings.text }}
        {% endif %}
         {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="button-wrap">
          <a class="btn btn-outline" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
        </div>
    {% endif %}
    </div>
      
     
    </div>
  </div>
</div>
<style>
  @media (max-width:767px){
    #shopify-section-{{ section.id }} .image-with-text-overlay-image img{
      content: url({{ section.settings.bg_image_mobile | img_url:'master' }});
    }
  }
</style>
{% schema %}
  {
    "name": "Image With Text Overlay",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "bg_image_mobile",
        "label": "Background Image - Mobile"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Retrowave"
      },
       {
        "type": "html",
        "id": "heading_svg",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>With electric bubblegum energy, dreamy ros√© lightning bolts and rock candy kisses, what's not to L-O-V-E?</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Be Mine"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Image With Text Overlay"
      }
    ]
  }
{% endschema %}

