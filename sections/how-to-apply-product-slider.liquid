{% assign coll = collections[section.settings.collection] %}

<section id="our-nail-wraps" data-aos="fade" data-section-id="{{ section.id }}">
  <div class="page-width">
    <h2 class="text-center">
      {{ section.settings.heading }}
    </h2>

    <div class="slider max-w-xl">
      {% for product in coll.products limit: 9 %}
        {% include 'product-thumbnail' %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get â€˜Em Now"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Nail Wraps"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}