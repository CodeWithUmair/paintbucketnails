{% assign coll = collections[section.settings.collection] %}

<section id="our-press-ons" data-aos="fade" data-section-id="{{ section.id }}">
  <div class="page-width">
    <h2 class="text-center">
      {{ section.settings.heading }}
    </h2>

    <div class="slider max-w-xl">
      {% for product in coll.products limit: 9 %}
        {% include 'product-thumbnail' %}
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="button-wrap text-center mt-44">
          <a class="btn btn-outline btn-wide" href="{{ section.settings.button_link }}" title="" target="_blank">{{ section.settings.button_text }}</a>
        </div>
    {% endif %}
  </div>
</section>

<style>
  .mt-44{
    margin-top: 44px;
  }
</style>

{% schema %}
  {
    "name": "Product Slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get â€˜Em Now"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Press Ons"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}