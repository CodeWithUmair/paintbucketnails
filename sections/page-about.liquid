<section class="page-introduction{% if section.settings.intro_nav != blank %} has-navigation{% endif %}" data-section-id="{{ section.id }}" data-section-type="page-about" data-aos="fade">
  <div class="page-width">
    <div class="max-w-xl">
      <div class="intro-title-wrap flex--flexbox flex--wrap flex--items-center">
        <div class="flex-item flex-item--two-thirds image-wrap">
          {% if section.settings.image != blank %}
            <img data-src="{{ section.settings.image | img_url: '1000x', scale: 2 }}" alt="{{ section.settings.image.src }}" class="lazyload">
          {% endif %}
        </div>

        <div class="flex-item flex-item--one-third text-wrap">
          <h1>
            {% if section.settings.intro_title != blank %}
              {{ section.settings.intro_title }}
            {% else %}
              {{ page.title }}
            {% endif %}
          </h1>
          {% if section.settings.intro_subtitle != blank %}
            {{ section.settings.intro_subtitle }}
          {% endif %}
        </div>
      </div>

      {% if section.settings.intro_text != blank %}
        <div class="intro-text-wrap text-center paragraph-xl">
          {{ section.settings.intro_text }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% for block in section.blocks %}
  {% if block.type == 'full_width_w_images' %}
    <section class="section-full-width-w-images bg-white circle-text-container" data-aos="fade">
      {% if block.settings.circle_text != blank %}
        <div class="circle-text circle-rotated text-center">
          <div class="text-wrap">
            {{ block.settings.circle_text }}
          </div>
        </div>
      {% endif %}

      <div class="section-wrap">
        <div class="text-wrap text-center max-w-lg">
          <h2>
            {% if block.settings.title != blank %}
              {{ block.settings.title }}
            {% endif %}
          </h2>

          {% if block.settings.text != blank %}
            <div class="paragraph-lg">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>

        <div class="flex--flexbox max-w-xl">
          <div class="flex-item--one-third">
            {% if block.settings.image_one != blank %}
              <img data-src="{{ block.settings.image_one | img_url: '800x', scale: 2 }}" alt="{{ block.settings.image_one.src }}" class="lazyload">
            {% endif %}
          </div>
          <div class="flex-item--one-third">
            {% if block.settings.image_two != blank %}
              <img data-src="{{ block.settings.image_two | img_url: '800x', scale: 2 }}" alt="{{ block.settings.image_two.src }}" class="lazyload">
            {% endif %}
          </div>
          <div class="flex-item--one-third">
            {% if block.settings.image_three != blank %}
              <img data-src="{{ block.settings.image_three | img_url: '800x', scale: 2 }}" alt="{{ block.settings.image_three.src }}" class="lazyload">
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  {% elsif block.type == 'full_width_two_cols' %}
    {% include 'section-full-width-two-columns', type: 'block' %}
  {% elsif block.type == 'full_width_text' %}
    {% include 'section-full-width-text', type: 'block' %}
  {% elsif block.type == 'meet_kristen' %}
    <section class="meet-kristen bg-white" data-aos="fade">
      <div class="page-width">
        <div class="max-w-xl">
          <div class="intro-title-wrap flex--flexbox flex--items-center flex--wrap">
            <div class="flex-item flex-item--one-half image-wrap">
              {% if block.settings.image != blank %}
                <img data-src="{{ block.settings.image | img_url: '1000x', scale: 2 }}" alt="{{ block.settings.image.src }}" class="lazyload">
              {% endif %}
            </div>

            <div class="flex-item flex-item--one-half text-wrap">
              <h2>
                {% if block.settings.title != blank %}
                  {{ block.settings.title }}
                {% else %}
                  {{ page.title }}
                {% endif %}
              </h2>

              {% if block.settings.text != blank %}
                {{ block.settings.text }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </section>
  {% endif %}
{% endfor %}

