<section id="why-we-love-pbpressons" class="bg-lt-pink" data-aos="fade" data-section-id="{{ section.id }}">
  <div class="page-width max-w-xl text-center">
    <h2>{{ section.settings.heading }}</h2>

    <div class="features-list flex--flexbox flex--wrap flex--justify-space-between">
      {% for block in section.blocks %}
        <div class="flex-item flex-item--one-forth">
          <div class="image-wrap">
            <img src="{{ block.settings.image | img_url: '400x', scale: 2 }}" alt="{{ block.setings.image.alt }}">
          </div>

          <div class="text-wrap text-center">
            {{ block.settings.title }}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <div class="button-wrap text-center">
        <a class="btn btn-outline btn-wide" href="{{ section.settings.button_link }}" title="" target="_blank">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}
  </div>
</section>
{% schema %}
  {
    "name": "Press Ons Features",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Why we love Press Ons"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Press Ons"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Url"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Text",
            "default": "10-14 days of wear."
          }
        ]
      }
    ]
  }
{% endschema %}
